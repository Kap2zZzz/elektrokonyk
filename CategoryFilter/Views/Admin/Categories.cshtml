@model IEnumerable<CategoryFilter.Entities.Category>
@{
    ViewBag.Title = "Категорії товарів";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <table class="table table-sm">
        <tr class="table-borderless">
            <th>Id</th>
            <th>Назва категорії</th>
            <th></th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <a href="@Url.Action("EditCategory", "Admin", new { id = item.Id })" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Редагувати</a> |
                    <a href="@Url.Action("DetailsCategory", "Admin")" class="btn btn-info btn-sm"><i class="fas fa-search"></i> Переглянути</a> |
                    <a href="@Url.Action("DeleteCategory", "Admin", new { id = item.Id })" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
    <p>
        <a href="@Url.Action("AddCategory","Admin")" class="btn btn-secondary btn-sm"><i class="fas fa-plus"></i> Додати категорію</a>
    </p>
</div>

